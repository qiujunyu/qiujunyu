$(function(){$(".main").click(function(){if(!$("#picon").hasClass("cur")){$("#standardLi").show();$("#trocheLi").show();$("#ltxt").html("收起选项（规格、剂型）");$("#picon").addClass("cur");}else{$("#standardLi").hide();$("#trocheLi").hide();$("#ltxt").html("更多选项（规格、剂型）");$("#picon").removeClass("cur");}});GetCurrentPriceByMids();$("#Order").change(function(){window.location.href=$("#Order").find("option:selected").attr("rel");});$(".block img").lazyload({event:"scrollstop",effect:"fadeIn",threshold:1000});$(".goodlist .autoimg").lazyload({event:"scrollstop",effect:"fadeIn",threshold:1000});$(".goods img").lazyload({event:"scrollstop",effect:"fadeIn",threshold:1000});$(".goodlist li").mouseenter(function(){$(this).addClass("hover");}).mouseleave(function(){$(this).removeClass("hover");});$(".more").click(function(){$(this).parent().css("max-height","100%");$(this).next().remove();$(this).remove();});var a=$.url.param("sort");var b=$.url.param("sorttype");if(a==undefined){$("#default").addClass("cur");}else{if(a=="salenum"){$("#salenum").addClass("cur");}else{if(a=="price"){$("#price").addClass("cur");if(b=="asc"){$("#price i").addClass("up");}else{$("#price i").addClass("down");}}else{if(a=="shopcount"){$("#shopcount").addClass("cur");}else{if(a=="millid"){$("#millid").addClass("cur");}else{if(a=="standardid"){$("#standardid").addClass("cur");}}}}}}$("#showPrice").click(function(){var c=window.location.href;if(c.indexOf("&price=no")>0){window.location.href=c.replaceAll("&price=no","");}else{if(c.indexOf("?price=no")>0){window.location.href=c.replaceAll("\\?price=no","");}else{window.location.href=c;}}});$("#showNoPrice").click(function(){var c=window.location.href;if(c.indexOf("&price=no")>0||c.indexOf("?price=no")>0){window.location.href=c;}else{if(c.indexOf("?")>0){window.location.href=c+"&price=no";}else{window.location.href=c+"?price=no";}}});$("#catalog h5").click(function(){if($(this).parent().hasClass("hover")){$(this).parent().removeClass("hover");}else{$(this).parent().addClass("hover");}});SetHightKeyword($("#keyword").val());setSearchHistory($("#keyword").val());});function SetHightKeyword(a){var b=a.split(" ");if(b.length<=1){b[0]=a;}for(var c=0;c<b.length;c++){if(GetNumCount(b[c])>=6){$(".goodlist  .info .ph").highlight(b[c]);}else{$(".goodlist  .info .txt").highlight(b[c]);}}}function GetNumCount(d){var b=0;var a=d.split("");for(var c=0;c<a.length;c++){if(!isNaN(a[c])){b+=1;}}return b;}function GetCurrentPriceByMids(){var a="";jQuery.each($(".medicineInfo"),function(b,c){if($(c).attr("rel")!=null&&$(c).attr("rel")!=""){a+=$(c).attr("rel")+",";}});a=a.substring(0,a.length-1);if(a!=""){jQuery.getJSON("/Common/Handler/Handler.ashx",{method:"GetCurrentPriceByMids",mids:a},function(b){if(b!="0"){$(".medicineInfo .money").removeClass("big").addClass("small");$(".medicineInfo .money").html("暂无报价");$(".medicineInfo .salesCount").html("0");jQuery.each(b.JSON,function(c,e){var d=' <span class="default_cursor money_cut">'+e.discount.replace(".0","")+"折起</span>";if(parseFloat(e.discount)>=10){d="";}$(".medicineInfo[rel='"+e.MedicineId+"'] .money").html("¥"+e.Price+d).addClass("big").removeClass("small");$(".medicineInfo[rel='"+e.MedicineId+"'] .salesCount").html(e.SalesCount);});}});}}